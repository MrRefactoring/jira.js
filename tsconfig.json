{
  "compilerOptions": {
    "target": "ES2018",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "lib": [
      "ES2018",
      "DOM"
    ],
    "baseUrl": ".",
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "docs",
    "out",
    "example"
  ]
}
