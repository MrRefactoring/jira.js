{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
      "@jirajs": ["src"], // todo remove
      "@jirajs/*": ["src/*"], // todo remove
      "@tests": ["tests"],
      "@tests/*": ["tests/*"]
    },
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "docs",
    "dist",
    "example"
  ]
}
