{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "out",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2018", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@jirajs": ["src"],
      "@jirajs/*": ["src/*"],
      "@tests": ["tests"],
      "@tests/*": ["tests/*"]
    },
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "coverage", "docs", "out", "example"]
}
