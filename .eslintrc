{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "airbnb-typescript/base"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": "./tsconfig.lint.json"
  },
  "plugins": [
    "import"
//    "sort-exports"
  ],
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "@typescript-eslint/lines-between-class-members": "off",
    "max-len": "off",
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off",
    "import/no-cycle": "off",
    "no-underscore-dangle": "off",
    "lines-between-class-members": "off",
    "no-trailing-spaces": "error",
    "linebreak-style": ["error", "unix"],
    "eol-last": "error",
//    "sort-exports/sort-exports": ["error", {"sortDir": "asc"}],
    "sort-imports": [
      "error",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": false,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": [
          "all",
          "single",
          "multiple",
          "none"
        ],
        "allowSeparatedGroups": false
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "*",
        "next": [
          "block",
          "block-like",
          "cjs-export",
          "class",
          "const",
          "export",
          "import",
          "let",
          "var"
        ]
      },
      {
        "blankLine": "always",
        "prev": [
          "block",
          "block-like",
          "cjs-export",
          "class",
          "const",
          "export",
          "import",
          "let",
          "var"
        ],
        "next": "*"
      },
      {
        "blankLine": "any",
        "prev": [
          "const",
          "let",
          "var"
        ],
        "next": [
          "const",
          "let",
          "var"
        ]
      },
      {
        "blankLine": "never",
        "prev": [
          "import"
        ],
        "next": [
          "import"
        ]
      },
      {
        "blankLine": "always",
        "prev": [
          "import"
        ],
        "next": [
          "export"
        ]
      },
      {
        "blankLine": "any",
        "prev": [
          "export"
        ],
        "next": [
          "export"
        ]
      }
    ]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts"
      ]
    }
  }
}
